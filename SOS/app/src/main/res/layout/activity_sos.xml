    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/button37"
        android:layout_column="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tableLayout"
        android:layout_alignEnd="@+id/tableLayout"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/tableLayout"
        android:layout_toRightOf="@+id/tableLayout"
        android:layout_toEndOf="@+id/tableLayout"
        android:layout_alignBottom="@+id/tableLayout"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/linearLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/sButton"
            android:layout_column="18"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="#673AB7"
            android:textColor="#FFFF"
            android:textSize="40dp"
            android:text="S"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tableLayout"
            android:layout_toEndOf="@+id/tableLayout"
            android:layout_alignTop="@+id/tableLayout"
            android:onClick="selectionButtonClicked"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/oButton"
            android:layout_column="18"
            android:textSize="40dp"
            android:background="#D32F2F"
            android:textColor="#FFFF"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:text="O"
            android:layout_below="@+id/sButton"
            android:layout_alignRight="@+id/sButton"
            android:layout_alignEnd="@+id/sButton"
            android:layout_toRightOf="@+id/tableLayout"
            android:layout_toEndOf="@+id/tableLayout"
            android:layout_marginTop="10dp"
            android:onClick="selectionButtonClicked"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULT"
        android:id="@+id/resultTV"
        android:layout_below="@+id/linearLayout"
        android:layout_toLeftOf="@+id/linearLayout"
        android:layout_above="@+id/button37"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

