    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/p1Score"
        android:background="#673AB7"
        android:textColor="#FFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/p2Score"
        android:layout_toStartOf="@+id/p2Score"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:background="#D32F2F"
        android:textColor="#FFFF"
        android:id="@+id/p2Score"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="30dp"
        android:textColor="#673AB7"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/p2Score"
        android:layout_toRightOf="@+id/p1Score"
        android:layout_toEndOf="@+id/p1Score"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:background="#673AB7"
        android:id="@+id/p1TV"
        android:layout_below="@+id/p1Score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFF00"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:id="@+id/p2TV"
        android:background="#D32F2F"
        android:layout_below="@+id/p2Score"
        android:layout_toRightOf="@+id/p2Score"
        android:layout_toEndOf="@+id/p2Score"
